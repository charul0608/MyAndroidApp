<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Title Section -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to My App"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <!-- Image Picker Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/imagePickerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appTitle"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">
        <Button
            android:id="@+id/imagePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image Picker"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

    <!-- PDF Viewer Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pdfViewCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagePickerCard"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">
        <Button
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PDF Viewer"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

    <!-- API List Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/roomDbCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pdfViewCard"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">
        <Button
            android:id="@+id/roomDb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API List"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Sign Out Button positioned at the bottom-right -->
    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>
